<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageDetails">
    <TextView
        android:id="@+id/messageDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messageConfigu"
        android:textSize="20sp"

        app:layout_constraintTop_toBottomOf="@id/hello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/sentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/messageDetailsTextView"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/sentFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"

        app:layout_constraintTop_toBottomOf="@id/sentTimeTextView"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/permenentDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="@string/permenentDelete"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/sentFrom"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>